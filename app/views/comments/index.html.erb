<%= title "Listing comments" %>

<table class="tablelist">
  <tr>
    <th>Session</th>
    <th>Review by</th>
    <th>Comment by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.review.session && comment.review.session.title %></td>
    <td><%= comment.review.presenter && comment.review.presenter.name %></td>
    <td><%= comment.presenter %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', "/" %>
