<h2> <%= @presenter.name  %> </h2>
<div> <%= @presenter.email %> </div>
<hr>

<div class="lessoutlined"> 
  <%= wikinize(@presenter.bio) %> 
</div>

<div class="alignright">
  Created: <%= l @presenter.created_at %> -- 
  Modified: <%= l @presenter.updated_at %> 
</div>
<%= guarded_link_to 'Edit bio', controller: 'presenters', action: 'edit', id: @presenter.to_param %> &nbsp;

<hr>

<% if @you_are_current_user==true %> 
  <h2>Your votes </h2>
  <div>(only you can see this)</div>
  <% if @presenter.votes.empty? %> 
    You have not voted yet.
  <% else %> 
    <%= render 'votes/index', :votes => @presenter.votes  %>
  <%end%> 
  <hr>
<%end%> 


<h2>Sessions by <%= @presenter.name  %> </h2>

<table class="tablelist">
  <tr>
    <th></th>
    <th> <%= "Session" %>  </th>
    <th> <%= "Presenter(s)" %> </th>
    <th> <%= "Reviews" %> </th>
    <th> <%= "Topic" %> </td>
    <th> <%= "Created" %>  </th>
    <th> <%= "Modified" %> </th>
    <th></th>
  </tr>

  <% @presenter.sessions.each_with_index do |session, i| %>
    <tr>
      <td> <%= i+1 %> </td>
      <td> <%= link_to session.title , session %></td>
      <td> <%= session_presenter_names(session) %> </td>
      <td> <%= session.reviews.count %> </td>
      <td> <%= session.topic %> </td>
      <td class="nowrap" ><%= l session.created_at %> </td>
      <td class="nowrap" ><%= l session.updated_at %> </td>
      <td><%= guarded_link_to 'Edit', controller: 'sessions', action: 'edit', id: session.to_param %></td>
    </tr>
  <% end %>
</table>


<p class="alignright"><a href="mailto:sessions@xpday.net">problems or questions</a> </p> 

<hr>

<%= link_to 'Back to list of presenters', presenters_path %>
