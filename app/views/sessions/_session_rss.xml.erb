<item>
  <title><![CDATA[<%= w this_session.title%>]]></title>
  <link><%= url_for :action => 'show' , :controller => 'sessions' , :id => this_session , :only_path => false %></link>
  <description><![CDATA[
    <h2><%= w this_session.title  %></h2>
    <h3> <%= w this_session.sub_title  %></h3>
    <div>by <%= session_presenter_names(this_session) %><hr /></div>
    <div>
      <%= wikinize(  this_session.short_description )  %>
    </div>
    <p><strong>Objectif de la session </strong>: <%= w this_session.session_goal %> </p>
    <table border="1" >
      <tr>
        <td> <strong>Type de Session</strong>: <%= this_session.session_type %> </td>
        <td> <strong>Nb max de participants</strong>: <%= this_session.max_participants %>  </td>
      </tr>
      <tr>
        <td> <strong>Nature</strong>: <%= this_session.topic_name %></td>
        <td> <strong>Ordi requis</strong>: <%= this_session.laptops_required %>  </td>
      </tr>
      <tr>
        <td> <strong>Durée</strong>: <%= this_session.duration %>  </td>
        <td> <strong>Autres restrictions</strong>: <%= this_session.other_limitations %>  </td>
      </tr>
      <tr>
        <td> <strong>Public visé</strong>: <%= this_session.intended_audience %>  </td>
        <td> <strong>Disposition salle</strong>: <%= this_session.room_setup %>  </td>
      </tr>
      <tr>
        <td> <strong>Niveau d'expérience</strong>: <%= this_session.experience_level %> </td>
        <td> <strong>Matériel requis</strong>: <%= this_session.materials_needed %> </td>
      </tr>
    </table>
    <h4>Description</h4>
    <%= wikinize( this_session.description) %>
    <h4>Plan ou agenda</h4>
     <%= wikinize( this_session.outline_or_timetable) %>
    <hr/>
    <p>Crée: <%= l this_session.created_at %> -- Modifiée: <%= l this_session.updated_at %></p>
    ]]></description>
  <pubDate><%= this_session.updated_at.strftime("%a, %-d %b %Y %H:%I:%M GMT") %></pubDate>
  <guid><%= url_for :action => 'show' , :controller => 'sessions' , :id => this_session , :only_path => false %></guid>
</item>