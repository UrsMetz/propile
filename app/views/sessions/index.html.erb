<table class="tablelist">
  <tr>
    <th></th>
    <th> <%= sortable "title" %> </th>
    <th> <%= sortable "presenters", "Presenter(s)" %> </th>
    <th> <%= sortable "reviewcount", "Reviews" %> </th>
    <th> <%= sortable "topic" %> </td>
    <th> <%= sortable "created_at", "Created" %> </th>
    <th> <%= sortable "updated_at", "Modified" %> </th>
    <th></th>
  </tr>

<% @sessions.each_with_index do |session, i| %>
  <tr>
    <td> <%= i+1 %> </td>
    <td> <%= link_to session.title , session %></td>
    <!--td> <%=  session.presenter_names %> </td-->
    <td>
         <%=  session.presenters[0] && 
              ( link_to session.presenters[0].name, session.presenters[0] )  %>
         <%=  session.presenters[1] && " & " %>
         <%=  session.presenters[1] && 
              ( link_to session.presenters[1].name, session.presenters[1] )  %>
    </td>
    <td> <%= session.reviews.count %> </td>
    <td> <%= session.topic %> </td>
    <td class="nowrap" ><%= l session.created_at %> </td>
    <td class="nowrap" ><%= l session.updated_at %> </td>
    <td><%= guarded_link_to 'Edit', controller: 'sessions', action: 'edit', id: session.to_param %></td>
  </tr>
<% end %>
</table>


