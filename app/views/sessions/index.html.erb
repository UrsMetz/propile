<table class="tablelist">
  <tr>
    <th>Title</th>
    <th>Presenter(s)</th>
    <th>Reviews</th>
    <th>Created</th>
    <th>Modified</th>
    <th></th>
  </tr>

<% @sessions.each do |session| %>
  <tr>
    <td>
        <%= link_to session.title , session %></td>
    <td>
      <%=  session.presenters[0] && 
           ( link_to session.presenters[0].name || session.presenters[0].email, session.presenters[0] )  %>
      <%=  session.presenters[1] && " & " %>
      <%=  session.presenters[1] && 
           ( link_to session.presenters[1].name || session.presenters[1].email, session.presenters[1] )  %>
    </td>
    <td><%= session.reviews.count %> </td>
    <td class="nowrap"><%= l session.created_at %> </td>
    <td class="nowrap"><%= l session.updated_at %> </td>
    <td><%= guarded_link_to 'Edit', controller: 'sessions', action: 'edit', id: session.to_param %></td>
  </tr>
<% end %>
</table>

