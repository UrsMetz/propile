<table class="ProgramCard <%=  this_session.topic%>">
  <tr>
    <td colspan="2">
      <h2><a name="session_<%=  this_session.to_param%>"></a><%= w this_session.title %></h2>
      <h3><%= w this_session.sub_title  %></h3>

      <h3>
        <% if  this_session.presenters[0] %>
          <a href="#presenter_<%=  this_session.presenters[0].id %>"><%= w  this_session.presenters[0].name %></a>
        <% end %>
        <% if  this_session.presenters[1] %>
          &amp; <a href="#presenter_<%=  this_session.presenters[1].id %>"><%= w  this_session.presenters[1].name %></a>
        <% end %>
      </h3>
    </td>
  </tr>
  <tr><td colspan="2" ><strong><%= wikinize(  this_session.short_description )  %></strong></td></tr>
  <tr>
    <td class="propertyname">Goal of the session: </td><td><%= w this_session.session_goal %>  </td>
  </tr>
  <tr>
    <td class="propertyname">Intended audience:</td><td> <%= w this_session.intended_audience %>
      (see <a href="http://www.xpday.net/Xpday2012/Personas.html" target="_blank">Personas</a>). <%= w  this_session.experience_level %> </td>
  </tr>
  <tr>
    <td class="propertyname">Session Type:</td><td> <%= this_session.duration %> <%= w this_session.session_type %> </td>
  </tr>
  <% if this_session.limited? then %>
    <tr>
      <td class="propertyname" nowrap>Max participants:</td><td> <%= this_session.max_participants %>  </td>
    </tr>
  <% end %>
  <% if  this_session.laptops_required? %>
    <tr>
      <td class="propertyname">Laptops required:</td><td> <%= this_session.laptops_required %>  </td>
    </tr>
  <%  end %>
  <% if this_session.has_materials? %>
    <tr>
      <td class="propertyname">Materials:</td>
      <td>   <a href="<%= this_session.material_url%>" target="_blank"><%= this_session.material_description %></a></td>
    <% end  %>
  </tr>
  <tr><td colspan="2" ><%= wikinize( this_session.description) %></td></tr>
  <% personas = Persona.mentioned_in(this_session.intended_audience)
  if personas.length > 0 then
  %>
    <tr><td colspan="2">
        <table border="0" class="personalist"><tr>
            <% personas.each do |persona| %>
              <td class="card"><a href="#persona_<%= persona.name.downcase %>"><img src="<%= persona.image %> " alt="<%= persona.short_description%>" title="<%= persona.short_description%>" width="96" height="96"/></a><br /><%= persona.name %></td>
            <%  end %>
          </tr></table>
      </td></tr>
  <% end %>
</table>