<p id="notice"><%= notice %></p> 
<h2>
  <%= @session.title  %> 
</h2>
<h3>
  <%= @session.sub_title  %> 
</h3>

<div> 
  by 
  <%=  @session.presenters[0] && 
       ( link_to @session.presenters[0].name || @session.presenters[0].email, @session.presenters[0] )  %>
  <%=  @session.presenters[1] && " & " %>
  <%=  @session.presenters[1] && 
       ( link_to @session.presenters[1].name || @session.presenters[1].email, @session.presenters[1] )  %>
</div>

<hr>

<div class="outlined"> 
<b>Short:</b>
  <%= @session.short_description %>
</div>

<div>
<table width="100%">
<tr>
  <td> Session Type: <%= @session.session_type %> </td>
  <td> Max participants: <%= @session.max_participants %>  </td>
</tr>
<tr>
  <td> Topic: <%= @session.topic %> </td>
  <td> Laptops required: <%= @session.laptops_required %>  
  </td>
</tr>
<tr>
  <td> Duration: <%= @session.duration %>  </td>
  <td> Other limitations: <%= @session.other_limitations %>  </td>
</tr>
<tr>
  <td> Intended audience: <%= @session.intended_audience %>  </td>
  <td> Room setup: <%= @session.room_setup %>  </td>
</tr>
<tr>
  <td> Experience level: <%= @session.experience_level %> </td>
  <td> Materials needed: <%= @session.materials_needed %> </td>
</tr>
<tr>
  <td colspan="2"> Goal of the session: <%= @session.session_goal %>  </td>
</tr>
<table>
</div>



<hr>

<div>
<h4>Description</h4>
<pre>
<%= @session.description %>
</pre>
</div>

<hr>

<div>
<h4>Outline or Timetable</h4>
<pre>
<%= @session.outline_or_timetable %> 
</div>

<hr>
<div class="alignright">
  Created: <%= l @session.created_at %> -- 
  Modified: <%= l @session.updated_at %> 
</div>
<%= link_to 'Edit', edit_session_path(@session) %> |
<%= link_to 'Back', sessions_path %> |
<%= link_to 'New Review', new_review_path( :session => @session ) %> 

