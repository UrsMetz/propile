<%= form_for(@program_entry, remote: true) do |f| %>
  <div class="popup">
    <%= errors_for @program_entry %>

    <%= f.hidden_field :program_id %>
    <%= f.hidden_field :slot %>
    <%= f.hidden_field :track %>

    <h3>Program version "<%= @program_entry.program.version %>" </h3>

    <div class="in_a_form"><i>Enter a session and/or a comment to display in the cell. <br>
      You can wikinize the comment. <br>
      If you span this cell over the entire row, <br>
      the cells to the right will become invisible (but not removed). </i></div>

    <div class="in_a_form"> Session id <%= f.text_field :session_id, size: 3 %> 
                            Span entire row <%= f.check_box :span_entire_row %> </div>
    <div class="in_a_form"> Comment <%= f.text_area :comment, cols: 20, rows: 1 %> </div>

    <div class="actions">
      <%= f.submit %>
      <a onclick="$(this).closest('form').remove()">cancel</a>
    </div>

  </div>
<% end %>

