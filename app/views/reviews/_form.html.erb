<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :session %>: 
    <% if @review.session.nil?  %>  
      no session defined (invalid review)
    <% else %> 
      <%= @review.session.title %>
    <% end %> 
  </div>
  <div class="field">
    <%= f.label :presenter %>: 
    <% if @review.presenter.nil?  %>  
      no presenter defined (invalid review)
    <% else %> 
      <%= @review.presenter.name %>
    <% end %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
